<!DOCTYPE html>
<html>
  <head>
    <title>EDH Life Counter</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src='/javascripts/index.js'></script>
  </head>
  <body>
    <style id="local_style"></style>
    <div id='body'>
      <div class="container-fluid">
        <h1>EDH Life Tracker</h1>
        <div class='menu'>
          <div class='bi-column' id='menu'>
            <input type='text' id='name_field' class='form-control' placeholder='Name'>
            <button type='button' id='create_button' class='btn btn-default'>Create Game</button>
            <button type='button' id='join_button' class='btn btn-default'>Join Game</button>
          </div>
          <div class='bi-column' id='join-menu' hidden='true'>
            <input type='text' id='id_field' class='form-control' placeholder='Game ID'></input>
            <button type='button' id='id_submit' class='btn btn-default'>Join</button>
          </div>
          <div class='bi-column'>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
